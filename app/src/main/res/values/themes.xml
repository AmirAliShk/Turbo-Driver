<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArianaDriver" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/colorWhite</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text_title_white">
        <item name="android:textColor">@color/grayLighter</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="text_title_black">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_19ssp</item>
    </style>

    <style name="item_title_black">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="item_title_white">
        <item name="android:textColor">@color/grayLighter</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="item_value">
        <item name="android:textColor">@color/grayMedium</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="dialog_title">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="dialog_message">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_14ssp</item>

    </style>

    <style name="ExpandAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="title_details">
        <item name="android:textColor">@color/title_detailes</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="page_header">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="Details_answer">
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="page_title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="text_main_black">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>