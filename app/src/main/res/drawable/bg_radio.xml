<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>

            <item android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="9dp" />

                    <solid android:color="#08000000" />
                </shape>
            </item>

            <item android:bottom="5.75dp" android:left="5.75dp" android:right="5.75dp" android:top="5.75dp">
                <shape>
                    <corners android:radius="9dp" />

                    <solid android:color="#10000000" />
                </shape>
            </item>

            <item android:bottom="6dp" android:left="6dp" android:right="6dp" android:top="6dp">
                <shape>
                    <corners android:radius="9dp" />
                    <solid android:color="#D81B60" />
                </shape>
            </item>

        </layer-list>
    </item>

    <item android:state_selected="false">
        <layer-list>

            <item android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp">
