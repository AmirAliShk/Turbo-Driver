<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pageBackground"
    android:clickable="true"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlActionBar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPageBackground">

        <LinearLayout
            android:id="@+id/llBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/Home"
                android:textColor="@color/grayDark"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_back"
                android:padding="@dimen/_2sdp"/>


        </LinearLayout>

        <TextView
            android:id="@+id/txtTitle"
            style="@style/page_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/card_to_card" />

        <TextView
            android:id="@+id/txtReport"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="پیگیری"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:paddingHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="شماره کارت"
                    android:textColor="@color/grayDark"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <AutoCompleteTextView
                    android:id="@+id/edtCardNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:maxLength="19"
                    android:nextFocusDown="@id/edtBankName"
                    android:background="@drawable/edit_text_style"
                    android:padding="@dimen/_8sdp"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="نام بانک"

                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/grayDark"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <EditText
                    android:id="@+id/edtBankName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/edit_text_style"
                    android:padding="@dimen/_8sdp"
                    android:singleLine="true"
                    android:inputType="text"
                    android:nextFocusDown="@id/edtTrackingCode"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="کد پیگیری"

                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/grayDark"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <EditText
                    android:id="@+id/edtTrackingCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/edit_text_style"
                    android:padding="@dimen/_8sdp"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:nextFocusDown="@id/edtDesc"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="توضیحات"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/grayDark"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <EditText
                    android:id="@+id/edtDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/edit_text_style"
                    android:padding="@dimen/_8sdp"
                    android:nextFocusDown="@id/edtValueCredit"
                    android:gravity="right|center_vertical"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:paddingBottom="@dimen/_10sdp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:text="مبلغ به تومان میباشد"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/edtValueCredit"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:hint="مبلغ دلخواه را اینجا وارد کنید"
                        android:background="@drawable/edit_text_style"
                        android:textColor="@color/colorBlack"
                        android:inputType="number"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColorHint="@color/grayMedium" />

                </LinearLayout>

            </LinearLayout>

            <ir.transport_x.taxi.custom_view.GridRadioGroup
                android:id="@+id/priceGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/_10sdp">

                <TableRow>

                    <RadioButton
                        android:id="@+id/first"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_radio"
                        android:button="@android:color/transparent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:checked="true"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:text="20,000"
                        android:textColor="@color/colorWhite"/>

                    <RadioButton
                        android:id="@+id/second"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_radio"
                        android:button="@android:color/transparent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:text="30,000"
                        android:textColor="@color/colorBlack" />

                    <RadioButton
                        android:id="@+id/third"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_radio"
                        android:button="@android:color/transparent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:text="40,000"
                        android:textColor="@color/colorBlack"
                        />
                </TableRow>

                <TableRow>

                    <RadioButton
                        android:id="@+id/forth"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_radio"
                        android:button="@android:color/transparent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:text="50,000"
                        android:textColor="@color/colorBlack"
                         />

                    <RadioButton
                        android:id="@+id/fifth"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_radio"
                        android:button="@android:color/transparent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:text="100,000"
                        android:textColor="@color/colorBlack"
                         />

                    <RadioButton
                        android:id="@+id/sixth"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_radio"
                        android:button="@android:color/transparent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:text="200,000"
                        android:textColor="@color/colorBlack"
                         />
                </TableRow>

            </ir.transport_x.taxi.custom_view.GridRadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ViewFlipper
                    android:id="@+id/vfSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    android:background="@drawable/bg_green">

                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:text="ثبت فیش واریزی"
                        android:textColor="@color/colorWhite"
                        android:textAppearance="?android:attr/textAppearanceLarge"                         />

                    <com.wang.avi.AVLoadingIndicatorView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        app:indicatorColor="@color/grayLighter" />

                </ViewFlipper>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>