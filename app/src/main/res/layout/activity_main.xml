<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBackground"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/grayDark"
                android:elevation="@dimen/_65sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgMenu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_weight="0.65"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_menu" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.85"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        style="@style/page_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:text="سارا بنی اسدی"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/item_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="شارژ" />

                        <TextView
                            android:id="@+id/txtCharge"
                            style="@style/page_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:gravity="left"
                            android:text="77,334"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/item_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=" تومان" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.65" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.25"
                        android:gravity="bottom|center_horizontal">

                        <com.kyleduo.switchbutton.SwitchButton
                            android:id="@+id/swEnterExit"
                            android:layout_width="@dimen/_140sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:checked="false"
                            android:textColor="@color/grayLighter"
                            android:textSize="@dimen/_16ssp"
                            app:kswAnimationDuration="300"
                            app:kswBackDrawable="@drawable/switch_background"
                            app:kswTextOff="   فعال     "
                            app:kswTextOn="    غیرفعال    "
                            app:kswThumbColor="@color/grayLighter"
                            app:kswThumbHeight="@dimen/_25sdp"
                            app:kswThumbMargin="@dimen/_5sdp"
                            app:kswThumbRangeRatio="1.4"
                            app:kswThumbWidth="@dimen/_25sdp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5" />

                    <LinearLayout
                        android:id="@+id/llMap"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/background1"
                        android:elevation="@dimen/_5sdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_map" />

                        <TextView
                            style="@style/text_main_black"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="0.75"
                            android:gravity="center"
                            android:text="@string/map" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.35" />

                    <LinearLayout
                        android:id="@+id/llFreeLoads"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/background1"
                        android:elevation="@dimen/_5sdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/ic_free" />

                        <TextView
                            style="@style/text_main_black"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="0.75"
                            android:gravity="center"
                            android:text="@string/free" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.35" />

                </LinearLayout>

                <!--            <View-->
                <!--                android:layout_width="0dp"-->
                <!--                android:layout_height="match_parent"-->
                <!--                android:layout_weight="0.25" />-->
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.10" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.25"
                        android:gravity="bottom|center_horizontal">

                        <com.kyleduo.switchbutton.SwitchButton
                            android:id="@+id/swStationRegister"
                            android:layout_width="@dimen/_140sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:checked="true"
                            android:visibility="invisible"
                            android:textColor="@color/grayLighter"
                            android:textSize="@dimen/_16ssp"
                            app:kswAnimationDuration="300"
                            app:kswBackDrawable="@drawable/switch_background"
                            app:kswTextOff="ثبت محدوده"
                            app:kswTextOn="خروج محدوده"
                            app:kswThumbColor="@color/grayLighter"
                            app:kswThumbHeight="@dimen/_25sdp"
                            app:kswThumbMargin="@dimen/_5sdp"
                            app:kswThumbRangeRatio="1.4"
                            app:kswThumbWidth="@dimen/_25sdp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5" />

                    <LinearLayout
                        android:id="@+id/llServiceManagement"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/background1"
                        android:elevation="@dimen/_5sdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_service_management" />

                        <TextView
                            style="@style/text_main_black"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="0.75"
                            android:gravity="center"
                            android:text="@string/service_management" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.35" />

                    <LinearLayout
                        android:id="@+id/llFinancial"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/background1"
                        android:elevation="@dimen/_5sdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_financial" />

                        <TextView
                            style="@style/text_main_black"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="0.75"
                            android:gravity="center"
                            android:text="@string/financial" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.35" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.65" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.85" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtStatus"
                        style="@style/text_title_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/background2"
                        android:elevation="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_8sdp"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true">

                    <ImageView
                        android:id="@+id/imgAnnouncement"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:src="@mipmap/logoariana" />

                    <TextView
                        android:id="@+id/txtBadgeCount"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/bg_red"
                        android:elevation="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="99"
                        android:textColor="@color/colorWhite"
                        android:visibility="visible" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3" />

        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="match_parent"
        android:layout_gravity="right">

        <include layout="@layout/drawer_menu" />

    </com.google.android.material.navigation.NavigationView>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.drawerlayout.widget.DrawerLayout>