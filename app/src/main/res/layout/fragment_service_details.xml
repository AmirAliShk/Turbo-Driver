<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBackground"
    android:clickable="true"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlActionBar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/actionBar">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_back" />

        <TextView
            style="@style/page_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/service_details"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background1"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                style="@style/title_details"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/sendTime" />

            <TextView
                style="@style/Details_answer"
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="wrap_content"
                android:text="12:50" />

            <View
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent" />

            <TextView
                style="@style/title_details"
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="wrap_content"
                android:text="@string/customerName" />

            <TextView
                style="@style/Details_answer"
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="wrap_content"
                android:text="بنی اسدی" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_origin" />

            <TextView
                style="@style/Details_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="امیریه 31. آراسته 1. مج سهند" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_destination" />

            <TextView
                style="@style/Details_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="جلال آل احمد 68 . پلاک   208 " />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                style="@style/title_details"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="@string/customerTell" />

            <TextView
                style="@style/Details_answer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="38905328" />

            <View
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent" />

            <TextView
                style="@style/title_details"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="@string/customerMobile" />

            <TextView
                style="@style/Details_answer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="09307278878" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                style="@style/title_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Load_type" />

            <View
                android:layout_width="@dimen/_25sdp"
                android:layout_height="match_parent" />

            <TextView
                style="@style/Details_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="محصولات کشاورزی" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                style="@style/title_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Load_cost" />

            <View
                android:layout_width="@dimen/_25sdp"
                android:layout_height="match_parent" />

            <TextView
                style="@style/Details_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="800,000" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                style="@style/title_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Settlement_side" />

            <View
                android:layout_width="@dimen/_25sdp"
                android:layout_height="match_parent" />

            <TextView
                style="@style/Details_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مبدا" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_ticke" />

            <View
                android:layout_width="@dimen/_25sdp"
                android:layout_height="match_parent" />

            <TextView
                style="@style/Details_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="محصولات کشاورزی" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:background="@drawable/bg_red"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingRight="@dimen/_8sdp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_canclee" />

                <TextView
                    style="@style/text_title_white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cancle"
                    android:paddingRight="@dimen/_5sdp"/>

            </LinearLayout>

            <View
                android:layout_width="@dimen/_7sdp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:background="@drawable/bg_green"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingRight="@dimen/_8sdp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_call" />

                <TextView
                    style="@style/text_title_white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/call"
                    android:paddingRight="@dimen/_5sdp"/>

            </LinearLayout>

            <View
                android:layout_width="@dimen/_7sdp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:background="@drawable/background3"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingRight="@dimen/_8sdp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_conversation" />

                <TextView
                    style="@style/text_title_white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Conversation"
                    android:paddingRight="@dimen/_5sdp"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <TextView
                style="@style/text_title_white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:text="@string/Place"
                android:textStyle="bold"
               android:background="@drawable/bg_grye"
                android:gravity="center"/>

    </LinearLayout>

</LinearLayout>