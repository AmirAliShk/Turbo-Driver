<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:background="@color/actionBar"
            android:layout_height="@dimen/_40sdp"/>

        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:src="@mipmap/arianaa" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/hohooh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_15sdp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_origin" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="0.35"
                android:gravity="right|center"
                android:text=" امیریه 31 . آراسته1 . مجتمع سهند"
                android:textColor="@color/colorBlack"
                android:textSize="17sp"
                android:layout_marginRight="@dimen/_10sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_destination" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="right|center"
                android:text=" امیریه 31 . آراسته1 . مجتمع سهند"
                android:textColor="@color/colorBlack"
                android:textSize="17sp"
                android:layout_marginRight="@dimen/_10sdp"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_mony" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="0.35"
                android:gravity="right|center"
                android:text="هزینه سرویس :"
                android:textColor="@color/navigationBar"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="0.35"
                android:gravity="center"
                android:text="150.000 تومان"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/hohooh"
            android:background="@drawable/bg_green1"
            android:text="قبول سرویس"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_alignBottom="@id/hohooh"
            android:background="@drawable/bg_redd"
            android:textColor="@color/colorWhite"
            android:src="@drawable/ic_canclee"
            android:textStyle="bold"
            android:layout_gravity="left"/>


    </LinearLayout>


</LinearLayout>