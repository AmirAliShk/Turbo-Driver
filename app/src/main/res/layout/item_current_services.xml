<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/background1"
        android:elevation="@dimen/_3sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:background="@drawable/title_header"
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp">

                <TextView
                    android:id="@+id/txtCustomerName"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/grayLighter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDate"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/grayLighter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:layout_marginLeft="@dimen/_5sdp"/>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.20" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp">

            <TextView
                style="@style/title_details"
                android:textColor="@color/title_detailes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Load_type" />

            <TextView
                android:id="@+id/txtCargoType"
                style="@style/Details_answer"
                android:textColor="@color/grayDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|right"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingVertical="@dimen/_4sdp"
                android:src="@drawable/ic_origin" />

            <TextView
                android:id="@+id/txtOriginAddress"
                style="@style/Details_answer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_gravity="center"
                android:textColor="@color/grayDark"
                android:layout_weight="3"
                android:layout_marginLeft="@dimen/_10sdp" />

            <LinearLayout
                android:id="@+id/llCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="@drawable/bg_grye"
                android:padding="@dimen/_4sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_callll"/>

                <TextView
                    style="@style/Details_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textColor="@color/colorWhite"
                    android:layout_weight="3"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="تماس" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|right"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_destination_one" />

            <TextView
                android:id="@+id/txtFirstDestAddress"
                style="@style/Details_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="@color/grayDark" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSecondDest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:gravity="top|right"
            android:visibility="gone">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="35dp"
                android:layout_weight="0.20"
                android:src="@drawable/ic_destination_two" />

            <TextView
                android:id="@+id/txtSecondDestAddress"
                style="@style/Details_answer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="@color/grayDark"
                android:layout_weight="3"
                android:layout_marginLeft="@dimen/_10sdp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llThirdDest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top|right"
            android:layout_marginBottom="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:visibility="gone">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="35dp"
                android:layout_weight="0.20"
                android:src="@drawable/ic_destination_three" />

            <TextView
                android:id="@+id/txtThirdDestAddress"
                style="@style/Details_answer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="@color/grayDark"
                android:layout_weight="3"
                android:layout_marginLeft="@dimen/_10sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgCredit"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp" />

                <TextView
                    android:id="@+id/txtCreditCustomer"
                    style="@style/Details_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/_8sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgReturnBack"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>

                <TextView
                    style="@style/Details_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/_8sdp"
                    android:text="بازگشت به مبدا." />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>