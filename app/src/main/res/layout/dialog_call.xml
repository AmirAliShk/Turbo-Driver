<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:gravity="top"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_15sdp"
                android:layout_weight="1"
                android:elevation="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:id="@+id/llNumber1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_margin="20dp"
                    android:background="@drawable/bg_dialog_button"
                    android:elevation="@dimen/_3sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@drawable/bg_cirecle_green"
                        android:elevation="@dimen/_5sdp"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/ic_calll" />

                    <TextView
                        android:id="@+id/txtNumber1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=" تماس اول "
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15sdp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llNumber2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_margin="20dp"
                    android:background="@drawable/bg_dialog_button"
                    android:elevation="@dimen/_3sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@drawable/bg_cirecle_green"
                        android:elevation="@dimen/_5sdp"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/ic_calll" />


                    <TextView
                        android:id="@+id/txtNumber2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=" تماس دوم "
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="18dp"
            android:src="@drawable/ic_cancle" />

    </LinearLayout>


</RelativeLayout>
